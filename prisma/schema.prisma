datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model MerchantAccount {
  merchant_id   String @id @db.VarChar(255)
  merchant_name String @db.VarChar(255)
